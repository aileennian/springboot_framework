<mapper namespace="com.nian.xxx.auth.mapper.UserMapper">
	<resultMap id="BaseResultMap" type="com.nian.xxx.auth.entity.User">
		<id property="userId" column="USER_ID" jdbcType="INTEGER"></id>
		<result property="userName" column="USER_NAME" jdbcType="VARCHAR"></result>
		<result property="password" column="PASSWORD" jdbcType="DATE"></result>
		<result property="lastLoginTime" column="lAST_LOGIN_TIME"
			jdbcType="VARCHAR"></result>
		<result property="loginClientIp" column="LOGIN_CLIENT_IP"
			jdbcType="VARCHAR"></result>
	</resultMap>

	<sql id="Base_Column_List">
		user_id,user_name,password,lAST_LOGIN_TIME,LOGIN_CLIENT_IP
	</sql>

	<!-- <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long"> 
