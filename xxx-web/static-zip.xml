    <id>project</id>  
    <formats>  
        <format>zip</format>  
    </formats>  
    <includeBaseDirectory>false</includeBaseDirectory>  
    <fileSets>  
        <fileSet>  
            <directory>${basedir}/target/static/${current-project.name}</directory>  
